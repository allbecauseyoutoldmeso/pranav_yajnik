<% @gallery_items.each do |item| %>

  <% if item.is_a?(Photo) %>

    <div class='gallery_frame'>

      <div class='row'>
        <div class='col-sm-2'></div>
        <div class='col-sm-8'>
          <%= link_to image_tag(item.international_url, :class => 'gallery_image'), item.international_url, target: '_blank' %>
        </div>
        <div class='col-sm-2'></div>
      </div>

      <% if admin_signed_in? %>
        <div class='text-center'>
          <%= button_to 'delete', "/photos/#{item.id}", method: :delete, :class => 'admin_button delete_photo_button' %>
        </div>
      <% end %>

    </div>

  <% else %>

    <div class='gallery_frame'>

      <div class='row'>
        <div class='col-sm-2'></div>
        <div class='col-sm-8'>
          <div class='embed-responsive embed-responsive-16by9'>
            <iframe class='embed-responsive-item gallery_video' src='https://www.youtube.com/embed/<%=item.you_tube_id%>?rel=0&autoplay=<%= params[:autoplay] || 0 %>' allowfullscreen></iframe>
          </div>
        </div>
      <div class='col-sm-2'></div>
      </div>


      <% if admin_signed_in? %>
        <div class='text-center'>
          <%= button_to 'delete', "/videos/#{item.id}", method: :delete, :class => 'admin_button delete_photo_button' %>
        </div>
      <% end %>

    </div>

  <% end %>

<% end %>
