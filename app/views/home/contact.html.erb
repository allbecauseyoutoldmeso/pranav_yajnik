<div class='row'>

  <div class='col-sm-1'>
  </div>

  <div class='col-sm-5 contacts'>

    <% if @pranav.email_address %>
      <a href='mailto:pranav@yahoo.co.uk?Subject=Kathak%20lessons' target='_blank'>
        <p class='d-flex justify-content-start'>
          <span><img src='social_media/email_2.png' class='img-fluid contact'></span>
          <span class='contact_text'>
            <%= @pranav.email_address %>
          </span>
        </p>
      </a>
    <% end %>


    <% if @pranav.telephone_number %>
      <a href='tel:01234567890' target='_blank'>
        <p class='d-flex justify-content-start'>
          <span><img src='social_media/phone_2.png' class='img-fluid contact'></span>
          <span class='contact_text'>
            <%= @pranav.telephone_number %>
          </span>
        </p>
      </a>
    <% end %>

    <% if @pranav.twitter_url %>
      <a href='https://www.twitter.com' target='_blank'>
        <p class='d-flex justify-content-start'>
          <span><img src='social_media/twitter_2.png' class='img-fluid contact'></span>
          <span class='contact_text'>
            <%= @pranav.twitter_url %>
          </span>
        </p>
      </a>
    <% end %>

    <% if @pranav.twitter_url %>
      <a href='https://www.facebook.com' target='_blank'>
        <p class='d-flex justify-content-start'>
          <span><img src='social_media/facebook_2.png' class='img-fluid contact'></span>
          <span class='contact_text'>
            <%= @pranav.facebook_url %>
          </span>
        </p>
      </a>
    <% end %>

  </div>

  <div class='col-sm-5 hidden-sm-down'>
    <img id='contact-image' src='pranav/flyer.jpg'>
  </div>

  <div class='col-sm-1'>
  </div>

</div>
