<div class='admin_form'>

  <%= form_for @pranav do |f| %>

    <% if @pranav.errors.any? %>
      <% @pranav.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
    <% end %>

    <div class='form-group'>
      <%= f.label :about, 'about pranav' %>
      <%= f.text_area :about, class: 'form-control about_pranav_input' %>
    </div>

    <div class='form-group'>
      <%= f.label :telephone_number, 'phone number' %>
      <%= f.text_field :telephone_number, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :email_address, 'email address' %>
      <%= f.text_field :email_address, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :facebook_url, 'facebook handle' %>
      <%= f.text_field :facebook_url, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :twitter_url, 'twitter handle' %>
      <%= f.text_field :twitter_url, class: 'form-control' %>
    </div>

    <%= f.submit 'save', class: 'btn btn-primary admin_button' %>

  <% end %>

</div>
