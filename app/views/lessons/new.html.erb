<div class='admin_form'>

  <%= form_for @lesson do |f| %>

    <% if @lesson.errors.any? %>
      <% @lesson.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
    <% end %>

    <div class='form-group'>
      <%= f.label :what, 'what' %>
      <%= f.text_field :what, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :where, 'where' %>
      <%= f.text_field :where, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :freetext, 'free text' %>
      <%= f.text_area :freetext, class: 'form-control lesson_freetext' %>
    </div>

    <div class='form-group'>
      <%= f.label :day, 'day' %>
      <%= f.select :day, Date::DAYNAMES.zip((0..6).to_a) %>
    </div>

    <div class='form-group'>
      <%= f.label :start_time, 'start time' %>
      <%= time_select :lesson, :start_time, {minute_step: 15} %>
    </div>

    <div class='form-group'>
      <%= f.label :end_time, 'end time' %>
      <%= time_select :lesson, :end_time, {minute_step: 15} %>
    </div>

    <div class='form-group'>
      <%= f.label :start_date, 'start date' %>
      <%= f.date_select :start_date %>
    </div>

    <div class='form-group'>
      <%= f.label :end_date, 'end date' %>
      <%= f.date_select :end_date %>
    </div>

    <%= f.submit 'save', class: 'btn btn-primary admin_button' %>
  <% end %>

</div>
