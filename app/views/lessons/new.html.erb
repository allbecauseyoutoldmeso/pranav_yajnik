<div class='lesson_form'>

  <%= form_for @lesson do |f| %>

    <% if @lesson.errors.any? %>
      <% @lesson.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
    <% end %>

    <div class='form-group'>
      <%= f.label :what, 'what' %>
      <%= f.text_field :what, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :where, 'where' %>
      <%= f.text_field :where, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :freetext, 'free text' %>
      <%= f.text_field :freetext, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :day, 'day' %>
      <%= f.select :day, Date::DAYNAMES.zip((0..6).to_a) %>
    </div>

    <div class='form-group'>
      <%= f.label :time, 'time' %>
      <%= time_select 'lesson', 'time', {minute_step: 15} %>
    </div>


    <%= f.submit 'save', class: 'btn btn-primary admin_button' %>
  <% end %>

</div>
