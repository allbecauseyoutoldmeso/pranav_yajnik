<div class='admin_form'>

  <%= form_for @video do |f| %>

    <% if @video.errors.any? %>
      <% @video.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
    <% end %>

    <div class='form-group'>
      <%= f.label :caption, 'caption' %>
      <%= f.text_field :caption, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :you_tube_id, 'you tube id' %>
      <%= f.text_field :you_tube_id, class: 'form-control' %>
    </div>

    <%= f.submit 'save', class: 'btn btn-primary admin_button' %>

  <% end %>
  
</div>
